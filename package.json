{
  "name": "docflows",
  "version": "1.0.0",
  "description": "Document Flow System - Monorepo",
  "private": true,
  "packageManager": "npm@11.7.0",
  "engines": {
    "node": ">=22.0.0", 
    "npm": ">=10.0.0"
  },
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "packages/shared"
  ],
  "scripts": {
    "dev:db": "docker compose -f docker/docker-compose.yml up -d",
    "dev": "npm run dev -w apps/backend & npm run dev -w apps/frontend",
    "build": "npm run build -w apps/backend && npm run build -w apps/frontend",
    "test": "npm test --workspaces"
  },
  "keywords": [
    "document-flow",
    "workflow",
    "approval"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "@types/multer": "^2.0.0"
  }
}
